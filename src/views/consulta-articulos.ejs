   <body id="bodyId" class="esconder">
      <%- include('partials/spinner') %>
      <%- include('partials/navbarLogued') %>
  

      <div class="content-page">
         <div class="content">


            <div class="container-fluid">          
               <div id="previewImage" style="display: none;"></div>
               <div class="row">
                  <div class="col-12">
                     <div class="card">
                        <div class="card-body">                        
                           <h4 class="header-title">Artículos cargados</h4>
                           <p class="text-muted font-14">
                              Mostrando todos los artículos de la base de datos.
                           </p>
                           <ul class="nav nav-tabs nav-bordered mb-3">
                              <li class="nav-item">
                                 <a href="#buttons-table-general" data-toggle="tab" aria-expanded="false" class="nav-link active">
                                 Vista General
                                 </a>
                              </li>
                              <li class="nav-item">
                                 <a href="#buttons-table-costos" data-toggle="tab" aria-expanded="true" class="nav-link">
                                 Costos
                                 </a>
                              </li>
                              <li class="nav-item">
                                 <a href="#buttons-table-resumen" data-toggle="tab" aria-expanded="true" class="nav-link">
                                 Resumen
                                 </a>
                              </li>
                           </ul>
                           <!-- end nav-->                                  
